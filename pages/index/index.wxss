/**index.wxss**/
.swiper-container{
  width: 100%;
  position: relative;  
}
.swiper_box {
  width: 100%;
  height:350rpx;
}

swiper-item image {
  width: 100%;
  display: inline-block;
  overflow: hidden;
  height:350rpx;
}
.checkMsg{
  color:#f1f1f1;
}
.content{
  background:#fff;
  width:100%
}
.content .header{
  width:100%;
  height:170rpx;
  background:#eee
}
.content .headertitle{
  width:100%;
  height:80rpx;
  line-height:90rpx;
  text-align:center;
  font-size:20px;
  font-weight:300;
  color:#37474f;
  margin-top:50rpx
}
.content .headertitleMsg{
  text-align:center;
  font-size:14px;
  color:#5e7387;
  height:60rpx;
  line-height:60rpx
}
.contentMain{
  width:auto;
  height:auto;
  overflow: hidden;

}
.contentMain .contentMsg{
  float:left;
  width:50%;
  text-align:center;
  margin-top:20rpx;
  
}
.contentMain  .contentMsgtitle{
  height:80rpx;
  line-height:80rpx;
  text-align:center;
  font-size:16px;
  color:#2a333c
}
.contentMain .contentMsgtitleMsg{
  line-height:50rpx;
  font-size:12px;
  color:#5e7387;
  width:85%;
  margin:auto;
}
.contentMain .contentImg{
  width:100%;
  height:100%;
  vertical-align:middle;
}
.contentMain .ImgContent{
  width:90px;
  height:90px;
  line-height:90px;
  margin:auto;

  background:#fff;
 
  text-align:center
}
.contentMain .Imgproduct{
  width:350rpx;
  height:350rpx;
}
.contentMain .producrImg{
  width:100%;
  height: 100%;
}
.contentMain .productMsgtitle{
  color:#1e8bc3;
   margin-top:20rpx;
}
.contentMain .companyIntroduction{
  line-height:50rpx;
  font-size:12px;
  width:100%;
  text-indent: 2em;
  color:#5e7387;
}
.contentMain .contentCompanyMsg{
  width:95%;
  height:auto;
  margin:auto;
  margin-top:45rpx;
  
}
.moreView{
  color:#044A67;
  font-size:12px;
  padding-bottom: 30rpx;
}
.companyContent{
  margin-bottom: 90rpx;
}